---
const {
  article: {
    data: { title, pubDate, tags, image },
    slug,
  },
} = Astro.props;

interface Props {
  article: CollectionEntry<"blog">;
}

import type { CollectionEntry } from "astro:content";
import { formatDate } from "../utils/formatDate.ts";
---

<div class="max-w-md mx-auto mt-10">
  <div class="bg-white rounded-lg overflow-hidden shadow-lg">
    <a href={`/articles/${slug}`}>
      <img
        src={`/images/${image}`}
        alt="Article Image"
        class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
      />
    </a>
    <div class="p-6">
      <h2 class="text-2xl font-semibold mb-2">
        <a href={`/articles/${slug}`}> {title}</a>
      </h2>
      <p class="text-gray-600 text-sm mb-4">
        {formatDate(pubDate)}
      </p>
      <div class="flex flex-wrap gap-2">
        {
          tags.map((tag: string, i: number) => (
            <span
              class={` px-2 py-1 text-white rounded-full text-xs hover:opacity-90 ${
                i % 2 == 0 ? " bg-blue-500" : "bg-orange-500 "
              }`}
            >
              <a href="">{tag}</a>
            </span>
          ))
        }
      </div>
    </div>
  </div>
</div>
